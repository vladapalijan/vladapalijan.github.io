nav{
	width: 100%;
	height: 60px;
	background-color: #fff;
	padding-bottom: 5px;
}

nav p{
	font-family: 'Anton', sans-serif;;
	color: rgb(65, 60, 60);
	font-size: 35px;
	line-height: 55px;
	float: left;
	padding: 5px 20px;
}

nav ul{
	float: left;
	text-align:center;
}
nav ul li{
	float: left;
	list-style: none;
	position: relative;
}

nav ul li a{
	display:block;
	font-family: 'Anton', sans-serif;
	color: #222;
	font-size: 25px;
	padding: 13px 14px;
	text-decoration: none;
}

nav ul li ul{
	display:none;
	position: absolute;
	background-color: #fff;
	padding: 5px;
	border-radius: 0px 0px 4px 4px;
	}
	
nav ul li:hover ul{
	display:block;
	}

nav ul li ul li{
	width: 180px;
	border-radius: 4px;
}

nav ul li ul li a{
	padding: 8px 14px;
}

nav ul li ul li a:hover{
	background-color: #f3f3f3;
}

